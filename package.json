{
  "name": "reseller-feed-middleware",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "engines": {
    "node": ">=20.10.0",
    "npm": ">=10.0.0"
  },
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "dev:next": "next dev -p 3001",
    "dev:all": "concurrently \"npm run dev\" \"npm run dev:next\"",
    "build": "tsc -p tsconfig.backend.json",
    "build:next": "next build",
    "start": "npm run build && node dist/index.js",
    "start:next": "next start -p 3001",
    "start:production": "concurrently --names \"backend,frontend\" --prefix-colors \"blue,green\" \"PORT=${BACKEND_PORT:-3000} npx ts-node --transpile-only src/index.ts\" \"PORT=${PORT:-8080} next start\"",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "backup": "./scripts/backup-db.sh",
    "migrate:postgres": "node scripts/migrate-postgres.js",
    "migrate:sqlite-to-postgres": "node scripts/migrate-sqlite-to-postgres.js"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@fastify/cors": "^11.1.0",
    "@fastify/etag": "^6.1.0",
    "@fastify/rate-limit": "^10.3.0",
    "@fastify/sensible": "^6.0.3",
    "@shopify/app-bridge-react": "^4.2.7",
    "@shopify/app-bridge-utils": "^3.5.1",
    "@shopify/polaris": "^13.9.5",
    "@shopify/shopify-api": "^12.1.1",
    "@types/pg": "^8.15.6",
    "@types/react": "^19.2.3",
    "@types/react-dom": "^19.2.3",
    "concurrently": "^9.2.1",
    "dotenv": "^17.2.3",
    "fast-xml-parser": "^5.3.1",
    "fastify": "^5.6.2",
    "next": "^16.0.1",
    "node-fetch": "^3.3.2",
    "pg": "^8.16.3",
    "pino": "^10.1.0",
    "pino-pretty": "^13.1.2",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "tiny-invariant": "^1.3.3",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3",
    "ulid": "^3.0.1",
    "zod": "^4.1.13"
  },
  "optionalDependencies": {
    "better-sqlite3": "^12.4.1"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.11",
    "@types/node": "^24.10.4",
    "@vitest/ui": "^4.0.15",
    "ts-node-dev": "^2.0.0",
    "vitest": "^4.0.15"
  }
}
